doctype html
html
  head
    meta(charset='utf-8')
    title #{title} - plataforma de opendata BogotaComoVamos
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='shorcut icon' href='/ico/favicon.gif')
    //bootstrap
    link(rel='stylesheet' href='/css/bootstrap.css')
    
    link(href='http://fonts.googleapis.com/css?family=Fjalla+One' rel='stylesheet' type='text/css')
    link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic|Montserrat:400,700' rel='stylesheet' type='text/css')
    //revolution banner css settings
    link(rel='stylesheet' href='/css/settings.css')
    //font awesome
    link(rel='stylesheet' href='/css/font-awesome.min.css')
    
    link(rel='stylesheet' href='/css/stylesheet.css')

    link(rel='stylesheet' href='/css/style.css')
  
    //HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    // [if lt IE 9]<!
    script(src='/js/retouch/html5shiv.js')
    script(src='/js/retouch/respond.min.js')
    // <![endif]
    script.
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-48622324-1', 'bogotacomovamos.org');
      ga('send', 'pageview');
    block meta


  body
    div
      div#header.header(data-spy='affix' data-offset-top=10)

        nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
          div.container
            div.navbar-header
              button.navbar-toggle(type='button' data-toggle='collapse' data-target='.navbar-ex1-collapse')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
              
              a.navbar-brand.logo(href='/') BCV 
                span Datos Abiertos
            
            div.collapse.navbar-collapse.navbar-ex1-collapse
              ul.nav.navbar-nav
                li(class=menuSelected&&menuSelected==='datasets'?'active':'')
                  a(href='/datasets') Datos

                li(class=menuSelected&&menuSelected==='apps'?'active':'')
                  a(href='/apps') Aplicaciones
                li(class=menuSelected&&menuSelected==='challenges'?'active':'')
                  a(href='/challenges') Retos
                li(class=menuSelected&&menuSelected==='devs'?'active':'')
                  a(href='/devs') Desarrolladores

                if login
                  li.divider-vertical
                  li
                    a(href='/user') Mi Perfil
                  li
                    a(href='/logout') Cerrar Sesi&oacute;n
                else
                  li(class=menuSelected&&menuSelected==='login'?'active':'')
                    a(href='/login') Login/registro

      div#index-1.main-wrapper
        if messages && messages.info
          div.alert.alert-info.alert-dismissable(style='z-index:2000;width:100%; position:absolute;')
            button(type='button' class='close' data-dismiss='alert' aria-hidden='true') &times;
            p= messages.info
        if messages && messages.error
          div.alert.alert-danger.alert-dismissable(style='z-index:2000;width:100%; position:absolute;')
            button(type='button' class='close' data-dismiss='alert' aria-hidden='true') &times;
            p(style='text-align:center;font-size:1.5em')= messages.error
        block content


    footer.footer
      div.container
        div(style='text-align: center')
          span
            a(href='/license') licenciamiento de Datos
          | &nbsp; | &nbsp;
          span 
            a(href='/about') Sobre la plataforma
          | &nbsp; | &nbsp;
          span
            a(href='mailto:desarrolladores@bogotacomovamos.org') Contacto
          | &nbsp; | &nbsp;
          span
            a(target='_blank' href='http://www.bogotacomovamos.org')  Bogotá Cómo Vamos
          br
          span --2014--

            


    script(src='/js/jquery-2.0.3.min.js')
    script(src='/js/bootstrap.min.js')

    block scripts
