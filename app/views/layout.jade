    block meta


  body
    div
      div#header.header(data-spy='affix' data-offset-top=10)

        nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
          div.container
            div.navbar-header
              button.navbar-toggle(type='button' data-toggle='collapse' data-target='.navbar-ex1-collapse')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
              
              a.navbar-brand.logo(href='/') BCV 
                span Datos Abiertos
            
            div.collapse.navbar-collapse.navbar-ex1-collapse
              ul.nav.navbar-nav
                li(class=menuSelected&&menuSelected==='datasets'?'active':'')
                  a(href='/datasets') Datos

                li(class=menuSelected&&menuSelected==='apps'?'active':'')
                  a(href='/apps') Aplicaciones
                li(class=menuSelected&&menuSelected==='challenges'?'active':'')
                  a(href='/challenges') Retos
                li(class=menuSelected&&menuSelected==='devs'?'active':'')
                  a(href='/devs') Desarrolladores

                if login
                  li.divider-vertical
                  li
                    a(href='/user') Mi Perfil
                  li
                    a(href='/logout') Cerrar Sesi&oacute;n
                else
                  li(class=menuSelected&&menuSelected==='login'?'active':'')
                    a(href='/login') Login/registro

      div#index-1.main-wrapper
        if messages && messages.info
          div.alert.alert-info.alert-dismissable(style='z-index:2000;width:100%; position:absolute;')
            button(type='button' class='close' data-dismiss='alert' aria-hidden='true') &times;
            p= messages.info
        if messages && messages.error
          div.alert.alert-danger.alert-dismissable(style='z-index:2000;width:100%; position:absolute;')
            button(type='button' class='close' data-dismiss='alert' aria-hidden='true') &times;
            p(style='text-align:center;font-size:1.5em')= messages.error
        block content

    footer#footer-1.footer
      div.container
        div.row
          div.col-md-4
            div.widget.about-us
              div.footer-brand
                | BCV
                span &nbsp;Datos Abiertos
              p Plataforma de datos abiertos del programa&nbsp;
                b Bogotá Cómo Vamos
                | &nbsp;

            
            div.widget.stay-connedted
              div.subpage-title
                h5 Contacto

              ul.social-links
                li
                  a.facebook(href='https://www.facebook.com/programabogotacomovamos')
                    i.fa.fa-facebook
                li
                  a.twitter(href='https://twitter.com/bogotacomovamos')
                    i.fa.fa-twitter
                li
                  a.rss(href='http://www.bogotacomovamos.org/blog/')
                    i.fa.fa-rss

          div.col-md-4
            div.widget.popular-posts
              div.subpage-title
                h5 Aplicaciones Populares
              
              ul.recent-posts
                for app in popApps
                  li
                    a(href='/apps/#{app.id}')
                      img(src=app.imageUrl alt=app.name onError="this.src='/imgs/genericLink_icon.jpg';")
                    h5
                      a(href='/apps/#{app.id}')= app.name
                      small= app.shortDescription

          div.col-md-4
            div.widget

              div.fb-like-box(data-href="https://www.facebook.com/programabogotacomovamos" data-width="100%" data-height="" data-colorscheme="light" data-show-faces="false" data-header="false" data-stream="true" data-show-border="false" style='background-color:#fff')

    footer.footer
      div.container
        div(style='text-align: center')
          span
            a(href='/license') licenciamiento de Datos
          | &nbsp; | &nbsp;
          span 
            a(href='/about') Sobre la plataforma
          | &nbsp; | &nbsp;
          span
            a(href='mailto:desarrolladores@bogotacomovamos.org') Contacto
          | &nbsp; | &nbsp;
          span
            a(target='_blank' href='http://www.bogotacomovamos.org')  Bogotá Cómo Vamos
          br
          span © BOGOTÁ CÓMO VAMOS 2014

            


    script(src='/js/jquery-2.1.0.min.js')
    script(src='/js/bootstrap.min.js')

    block scripts
