extends layout

block content

  div.row
    div.col-md-3.list-group.dataset-provider
      div.list-group-item.header
        img.img-responsive(src='http://gallery.mailchimp.com/fb9fdd8a176f2f16e486b877d/images/logo_bogota_como_vamos.png' alt='Responsive image')
        h3 Bogotá Cómo vamos
        a(href='http://bogotacomovamos.org/') bogotacomovamos.org

      div.list-group-item.socials
        span Compartir en redes sociales
      
      u
        li.list-group-item Google +
        li.list-group-item Twitter
        li.list-group-item Facebook



    div.col-md-9

      div.page-header
        h2= dataset.title
      
      p= dataset.description

      h3 Datos y recursos

      ul.list-group
        li.list-group-item interactivo
        li.list-group-item API
        li.list-group-item página web
        li.list-group-item CSV