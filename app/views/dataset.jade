extends layout

block content
  ul
    each dimension in data.dimensions
      li
        h2= dimension.name

        ul
          each category in dimension.categories
            li
              h3= category.name

              ul
                each indicator in category.indicators
                  li
                    h4= indicator.name
                    b descripci&oacute;n: 
                    span #{indicator.description}
                    br
                    b tipo de medida: 
                    span #{indicator.measureType}
                    br
                    b source: 
                    span #{indicator.source}
                    br
                    b cobertura: 
                    span #{indicator.coverage}
                    br
                    b periodicidad: 
                    span #{indicator.period}
                    br
                    b datos: 
                    table
                      tr
                        - for(var year = 1998; year<=2012; year++)
                          th= year
                      tr
                        each data in data2
                          - data = data.get(indicator.id)
                          if data === null
                            - data = 'N.D'
                          if data!== 'N.D' && indicator.measureType === 'Porcentual'
                            - data = (data*100).toPrecision(3) + '%'
                          td= data

