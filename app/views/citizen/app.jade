extends ../layout

block content

  div.row
    div.col-md-3.list-group.dataset-provider
      div.list-group-item.header
        a(href=app.url)
          img.img-responsive(src=app.logoUrl alt='Responsive image')
        h4(style='overflow-x: hidden')
          a(href=app.url)= app.url
        small Desarrollada por 
          b= app.owner.name
        

      div.list-group-item.socials
        span Compartir en redes sociales
      
      for tag in app.tags
        span tag &nbsp;

      u
        li.list-group-item Google +
        li.list-group-item Twitter
        li.list-group-item Facebook


    div.col-md-9

      div.page-header
        h2= app.name
        p= app.shortDescription

      p= app.description

      h3 Comentarios

        div#disqus_thread
    
        script(type="text/javascript").
        
          var disqus_shortname = 'fcorona';

          (function() {
              var dsq = document.createElement('script');
              dsq.type = 'text/javascript';
              dsq.async = true;
              dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
              (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
          })();
    
        noscript Please enable JavaScript to view the
          a(href="http://disqus.com/?ref_noscript") comments powered by Disqus.
        a.dsq-brlink(href="http://disqus.com") comments powered by
          span.logo-disqus Disqus