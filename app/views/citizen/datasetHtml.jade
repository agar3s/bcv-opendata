extends layoutCitizen

block meta
  meta(name="description" content=dataset.description)

  //og properties
  meta(property="og:title" content="#{dataset.name} - Plataforma de datos abiertos Bogot치 C칩mo Vamos")
  meta(property="og:image" content="http://api.bogotacomovamos.org/imgs/bogota-como-vamos.jpg")
  meta(property="og:description" content=dataset.description)

block content

  section.pad-top-25
    div.container
      div.row
        div.col-md-3.list-group.dataset-provider
          div.list-group-item.header
            img.img-responsive(src='/imgs/bogota-como-vamos.jpg' alt='Responsive image')
            h3 Bogot치 C칩mo Vamos
            a(href='http://bogotacomovamos.org/') bogotacomovamos.org
          
          ul.project-details-list

            li
              h6 Cat&aacute;logo de datos: 
              div.project-terms= dataset.dataset.title
            li
              h6 Categor&iacute;a: 
              div.project-terms= dataset.category.name
            li
              h6 Dimensi&oacute;n: 
              div.project-terms= dataset.dimension.name
            li
              h6 Unidad de medida: 
              div.project-terms= dataset.measureType
            li
              h6 Fuente: 
              div.project-terms= dataset.source
            li
              h6 Cobertura: 
              div.project-terms= dataset.coverage
            li
              h6 Periodicidad: 
              div.project-terms= dataset.period

          div.list-group-item.socials
            h5 Compartir en redes sociales
          
          ul.list-unstyled
            li.list-group-item
              div.g-plus(data-action='share')

            li.list-group-item
              a.twitter-share-button(href='https://twitter.com/share' data-via='bogotacomovamos' data-lang='es') Tweet
            
            li.list-group-item
              div#fb-root
              div.fb-share-button(data-type='button_count')



        div.col-md-9

          div.page-header
            h2= dataset.name
          
          h4 Descripci&oacute;n: 
          p= dataset.description
          br
          h4 Gr&aacute;fico:
          br
          div.row
            div.chart-container.col-md-12
              svg#chart.chart
          
          ul.list-group
            li.list-group-item
              a.panel-title(href='/datasets/#{dataset.name}/csv') Descargar CSV
            li#accordion.panel-group
                div.panel.panel-default
                  div.panel-heading(style='background-color:#fff')
                    span.panel-title
                      a.accordion-toggle.collapsed(data-toggle='collapse' data-parent='#accordion' href='#collapseOne')
                        | Insertar gr&aacute;fica en p&aacute;gina web
                  div#collapseOne.panel-collapse.collapse
                    div.panel-body
                      span Copie y pegue el siguiente c&oacute;digo para agregarlo en su p&aacute;gina web.
                      textarea.col-md-6
                        | &lt;iframe width="100%" height="600" src="http://api.bogotacomovamos.org/graphIccv/#{dataset.id}" frameborder="0"&gt;&lt;/iframe&gt;
            
          br
          h4 Desarrolladores:
          ul.list-group
            li.list-group-item
              a.panel-title(href='/api/datas/#{dataset.id}/?key=comovamos/' target='_blank') API REST


block aditionalScripts
  //script(src='/js/dimension.js')
  script(src='/js/d3.v3.min.js')
  script(src='http://labratrevenge.com/d3-tip/javascripts/d3.tip.v0.6.3.js')
  script(src='/js/graph.js')
  script.
    initGraph('#{dataset.id}');
